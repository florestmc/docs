{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "FlorestMC Wiki",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/cdn/img/favicon.png",
  "errors": {
    "404": {
      "redirect": false,
      "title": "Страница не существует :(",
      "description": "Перепроверь написание ссылки!"
    }
  },
  "seo": {
    "metatags": {
        "canonical": "https://docs.florestmc.ru"
    }
  },
  "navigation": {
    "languages": [
      {
        "language": "en"
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Главный сайт",
          "href": "https://florestmc.ru/",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Ссылки",
          "href": "https://docs.florestmc.ru/urls",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Поддержка",
        "href": "mailto:support@florestmc.ru"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.mintlify.com"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "telegram": "https://t.me/fmc_server"
    }
  }
}
