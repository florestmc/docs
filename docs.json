{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "FlorestMC Wiki",
  "colors": {
    "primary": "#3F544F",
    "light": "#FB2561",
    "dark": "#171E2E"
  },
  "favicon": "/cdn/img/icons/favicon.png",
  "errors": {
    "404": {
      "redirect": false,
      "title": "Страница не существует :(",
      "description": "Перепроверь написание ссылки!"
    }
  },
  "seo": {
    "metatags": {
        "canonical": "https://wiki.florestmc.ru"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Ссылки",
        "icon": "link",
        "pages": ["urls/index"]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Главный сайт",
          "href": "https://florestmc.ru/",
          "icon": "globe"
        },
        {
          "anchor": "Ссылки",
          "href": "https://wiki.florestmc.ru/urls",
          "icon": "link"
        }
      ]
    }
  },
  "logo": {
    "light": "/cdn/img/icons/logo-light.png",
    "dark": "/cdn/img/icons/logo-dark.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Поддержка",
        "href": "mailto:support@florestmc.ru"
      }
    ]
  },
  "footer": {
    "socials": {
      "telegram": "https://t.me/fmc_server"
    }
  }
}
